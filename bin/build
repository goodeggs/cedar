#!/bin/sh -e
build_dir=$1
cache_dir=$2

buildpack="/buildkit"

if [ -f /build/.buildpacks ]; then
  git clone https://github.com/ddollar/heroku-buildpack-multi /tmp/multipack
  buildpack="/tmp/multipack"
fi

mkdir -p $cache_dir

cd $build_dir

$buildpack/bin/detect $build_dir $cache_dir
$buildpack/bin/compile $build_dir $cache_dir
